---
export interface Props {
  articles: any[];
  path: string;
}

const { articles, path } = Astro.props;
---

<ul class="article-list">
  {
    articles.map((article) => (
      <li class="article-item">
        <h1 class="text-xl">
          <a href={`/${path}/${article.slug}`}>{article.frontmatter.title}</a>
        </h1>
        <p>
          <time datetime={article.frontmatter.publishDate.toString()}>
            {article.frontmatter.publishDate.toString()}
          </time>
        </p>
        <p>{article.frontmatter.description}</p>
        <ul class="article-tags">
          {article.frontmatter.tags.map((tag: string) => (
            <li class="tag">{tag}</li>
          ))}
        </ul>
      </li>
    ))
  }
</ul>

<style>
  .article-list {
    @apply flex flex-col gap-6;
  }
  .article-item {
    @apply pt-6 first-of-type:border-none border-t border-slate-200;
  }
  .article-item a {
    @apply no-underline;
  }

  .article-tags {
    @apply flex gap-2 py-2;
  }

  .article-tags .tag {
    @apply bg-slate-100 text-slate-700 text-sm p-2 py-1 rounded-md;
    @apply transition-all !py-0.5;
  }

  .article-item > * > .wrapper {
    @apply flex items-start gap-4;
  }

</style>
